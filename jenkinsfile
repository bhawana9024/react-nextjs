pipeline{
    agent any

    stages{

        stage('build'){
            steps{
                sh " sudo yarn install"
                sh " sudo yarn build"
            }
        }

        stage('deploy'){
            steps{
                  sh 'sudo pm2 restart "react-nextjs" || pm2 start yarn "yarn start" --name "react-nextjs" -- start -p 4012'
            }
        }
    }
}
